@namespace Nekai.Razor
@inherits NekaiInputBase<bool>

<FluentSwitch Style="@Style" Class="@Class" Label="@Label" Value="@Value" Disabled="@Disabled" Required="@Required" ValueChanged="@ValueChanged" DisplayName="@Label" AriaLabel="@Label" Name="@Label" 
	CheckedMessage="@CheckedMessage" UncheckedMessage="@UncheckedMessage" Placeholder="@Placeholder">
</FluentSwitch>

@code {
	/// <summary> The message shown when the <see cref="Value"/> is <see langword="true"/>. </summary>
	[Parameter]
	public string? CheckedMessage { get; set; }
	/// <summary> The message shown when the <see cref="Value"/> is <see langword="false"/>. </summary>
	[Parameter]
	public string? UncheckedMessage { get; set; }
}
