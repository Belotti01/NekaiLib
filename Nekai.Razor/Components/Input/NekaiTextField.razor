@namespace Nekai.Razor
@inherits NekaiInputBase<string>

<FluentTextField Style="@Style" Class="@Class" Value="@Value" Label="@Label" Disabled="@Disabled" Required="@Required" ValueChanged="@ValueChanged" DisplayName="@Label" AriaLabel="@Label" Name="@Label" 
	TextFieldType="@Type" Placeholder="@Placeholder">
</FluentTextField>

@code {
	protected override void OnParametersSet()
	{
		base.OnParametersSet();

		// Automatically detect the input mode if it's not set manually.
		TextInputMode ??= Type switch
		{
			TextFieldType.Email => InputMode.Email,
			TextFieldType.Tel => InputMode.Telephone,
			TextFieldType.Url => InputMode.Url,
			_ => InputMode.Text
		};
	}

	/// <summary> The type of text to be entered in the field. </summary>
	[Parameter]
	public TextFieldType Type { get; set; } = TextFieldType.Text;
	/// <summary> The expected input type. </summary>
	[Parameter]
	public InputMode? TextInputMode { get; set; }
}
