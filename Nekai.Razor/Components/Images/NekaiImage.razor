@namespace Nekai.Razor
@inherits  NekaiComponentBase

<img id="@Id" class="@Class" style="@Style" aria-label="@AriaLabel" aria-labelledby="@AriaLabelledBy" alt="@Alt" />

@code {
    [Parameter]
    public string? AriaLabelledBy { get; set; }
    [Parameter]
    public string Alt { get; set; }= "";
    [Parameter]
    public bool Responsive { get; set; }
    [Parameter]
    public bool Thumbnail { get; set; }
    [Parameter]
    public Rounding Rounding { get; set; }
    
    public override void AfterClassSet()
    {
        base.AfterClassSet();
        Class += ' ' + Rounding.AsClass();
        if(Responsive)
            Class += " img-fluid";
        if(Thumbnail)
            Class += " img-thumbnail";
    }
}