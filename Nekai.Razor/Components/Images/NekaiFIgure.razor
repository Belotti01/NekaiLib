@namespace Nekai.Razor
@inherits NekaiComponentBase

<figure class="@Class figure" id="@Id" style="@Style" aria-label="@AriaLabel">
    <img class="@_ImgClass" src="@Src" alt="@Alt" >
    @if(Caption is not null)
    {
        <figcaption class="@_CaptionClass">
            @Caption
        </figcaption>
    }
</figure>


@code {
    [Parameter, EditorRequired]
    public string Src { get; set; } = "";
    [Parameter, EditorRequired]
    public string Alt { get; set; } = "";
    [Parameter]
    public RenderFragment? Caption { get; set; }
    [Parameter]
    public bool AlignCaptionEnd { get; set; }
    [Parameter]
    public bool FullWidth { get; set; }
    [Parameter]
    public bool Rounded { get; set; }

    private string _CaptionClass => "figure-caption" + (AlignCaptionEnd ? " text-end" : "");
    private string _ImgClass
    {
        get
        {
            string imgClass = "figure-img";
            if(FullWidth)
                imgClass += " img-fluid";
            if(Rounded)
                imgClass += " rounded";
            return imgClass;
        }
    }


}