@namespace Nekai.Razor
@inherits NekaiComponentBase

<i class="@Class" style="@Style" aria-label="@AriaLabel">
    @ChildContent
</i>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public IconSize Size { get; set; } = IconSize.Default;
    /// <summary> The vertical alignment of the icon. Defaults to <see cref="VerticalAlignment.Bottom"/>
    /// to align it with the nearby text. </summary>
    [Parameter]
    public VerticalAlignment Alignment { get; set; } = VerticalAlignment.Bottom;
    
    public override void AfterClassSet()
    {
        base.AfterClassSet();
        Class += " material-icons " + Alignment.ToCLass();
    }

    public override void AfterStyleSet()
    {
        base.AfterStyleSet();
        Style += $"font-size: {Size.ToPixelSize()};";
    }
}