@namespace Nekai.Razor
@inherits NekaiComponentBase

@* https://getbootstrap.com/docs/5.3/components/offcanvas/ *@

<NekaiButton Class="@Class" Id="@Id" Style="@Style" AriaLabel="@AriaLabel" BsToggle="offcanvas" BsTarget="@OffCanvasId"
             Disabled="@Disabled" Color="@Color" Rounding="Rounding" Outline="@Outline" Size="@Size">
    @ChildContent
</NekaiButton>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter, EditorRequired]
    public string OffCanvasId { get; set; } = "";
    [Parameter]
    public ButtonTheme Color { get; set; }
    [Parameter]
    public Rounding Rounding { get; set; }
    [Parameter]
    public Outline Outline { get; set; }
    [Parameter]
    public Sizing Size { get; set; }
    [Parameter]
    public bool Disabled { get; set; }
    
    
    public override void AfterClassSet()
    {
        base.AfterClassSet();
        Class += " btn";
    }
}