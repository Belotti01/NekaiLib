@namespace Nekai.Razor
@inherits NekaiComponentBase

<th id="@Id" class="@Class @Alignment.ToCLass()" scope="@(ScopeRow ? "row" : "column")" style="@Style" aria-label="@AriaLabel" colspan="@ColSpan">
    @ChildContent
</th>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    /// <summary> Whether to scope this header to the row instead of to the column. </summary>
    [Parameter]
    public bool ScopeRow { get; set; }
    /// <summary> The amount of columns occupied by this item. </summary>
    [Parameter]
    public int ColSpan { get; set; } = 1;
    [Parameter]
    public VerticalAlignment Alignment { get; set; }
}