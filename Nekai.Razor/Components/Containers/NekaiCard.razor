@namespace Nekai.Razor
@inherits NekaiComponentBase

<FluentCard Style="@Style" Class="@Class" Height="@Height" Width="@Width" MinimalStyle="@MinimalStyle">
	@ChildContent
</FluentCard>

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	/// <summary> The CSS height value of the card. </summary>
	[Parameter]
	public string? Height { get; set; }
	/// <summary> The CSS width value of the card. </summary>
	[Parameter]
	public string? Width { get; set; }

	[Parameter]
	public bool MinimalStyle { get; set; }
}
