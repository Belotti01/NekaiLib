@namespace Nekai.Razor
@inherits NekaiComponentBase

<ul id="@Id" class="@Class nav nav-tabs" style="@Style" aria-label="@AriaLabel" aria-orientation="@Orientation" role="tablist">
    @ChildContent
</ul>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public bool FullWidth { get; set; }
    [Parameter]
    public bool Justified { get; set; }
    [Parameter]
    public bool Center { get; set; }
    [Parameter]
    public bool Vertical { get; set; }

    protected string Orientation => Vertical
        ? "vertical"
        : "horizontal";
    
    public override void AfterClassSet()
    {
        base.AfterClassSet();

        Class += " nav nav-tabs";

        if(Vertical)
            Class += " nav-tabs-vertical";

        if(FullWidth)
            Class += " nav-fill";

        if(Center)
            Class += " justify-content-center";

        if(Justified)
            Class += " nav-justified";
    }

}