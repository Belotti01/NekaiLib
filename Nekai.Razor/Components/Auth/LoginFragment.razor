@namespace Nekai.Razor
@rendermode InteractiveServer

@inherits BaseAuthComponent

 <FluentEditForm FormName="LoginForm" Model="@_user" OnValidSubmit="async() => await OnValidSubmit.InvokeAsync(_user)">
     <FluentValidationSummary Model="context"/>
     
     <FluentValidationMessage For="() => _user.Email" />
     <FluentTextField Required Label="Email" @bind-Value="@_user.Email" TextFieldType="TextFieldType.Email" />  
     
     <FluentValidationMessage For="() => _user.Password" />
     <FluentTextField Required Label="Password" @bind-Value="@_user.Password" TextFieldType="TextFieldType.Password" />
    
     <FluentButton Type="ButtonType.Submit"> Login </FluentButton>
</FluentEditForm>

@code {
    [Parameter]
    public EventCallback<UserEditContext> OnValidSubmit { get; set; }
    
    private readonly UserEditContext _user = new();

    
}