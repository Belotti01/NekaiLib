@namespace Nekai.Razor
@inherits NekaiComponentBase

<div id="@Id" class="@Class" style="@Style" aria-label="@AriaLabel" role="status">
    <span class="visually-hidden">Loading...</span>
</div>

@code {
    /// <summary> The size of the spinner. </summary>
    [Parameter]
    public Sizing Size { get; set; }
    /// <summary> The color of the spinner. </summary>
    [Parameter]
    public Theme Color
    {
        get => TextColor; 
        set => TextColor = value;
    }
    
    public override void AfterClassSet()
    {
        base.AfterClassSet();
        Class += " spinner-border";
        Class += ' ' + Size.AsSpinnerClass();
    }
}