@namespace Nekai.Razor
@inherits NekaiComponentBase

<FluentNavLink Class="@Class" Style="@Style" Href="@Href" Icon="@Icon" Disabled="@Disabled" Match="@Match" Target="@Target.ToTargetString()">
	@ChildContent
</FluentNavLink>

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	[Parameter]
	public string Href { get; set; } = "";
	[Parameter]
	public Icon? Icon { get; set; }
	[Parameter]
	public Target Target { get; set; }
	[Parameter]
	public bool Disabled { get; set; }
	[Parameter]
	public bool MatchAll { get; set; }

	private NavLinkMatch Match => MatchAll ? NavLinkMatch.All : NavLinkMatch.Prefix;
}
