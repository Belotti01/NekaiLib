@namespace Nekai.Razor
@inherits NekaiComponentBase

<FluentNavLink Class="@Class" Style="@Style" Href="@Href" Icon="@Icon" Disabled="@Disabled" Match="@Match" Target="@Target.ToTargetString()">
	@ChildContent
</FluentNavLink>

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	/// <summary> The URL linked to this component. </summary>
	[Parameter]
	public string Href { get; set; } = "";
	/// <inheritdoc cref="FluentNavBase.Icon"/>
	[Parameter]
	public Icon? Icon { get; set; }
	/// <summary> Specified where to open the URL when clicked. </summary>
	[Parameter]
	public Target Target { get; set; }
	/// <inheritdoc cref="FluentNavBase.Disabled"/>
	[Parameter]
	public bool Disabled { get; set; }
	/// <summary> Whether the link should be matched against the whole URL, or any prefix of the URL. </summary>
	[Parameter]
	public bool MatchAll { get; set; }

	public NavLinkMatch Match => MatchAll ? NavLinkMatch.All : NavLinkMatch.Prefix;
}
