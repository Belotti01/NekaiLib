@namespace Nekai.Blazor.Components

@inherits NekaiDynamicComponentBase
@implements ITextContainingComponent

<div class=@Class style=@Style>
	@ChildContent
</div>

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	[Parameter]
	public string? TextTooltip { get; set; }
	[Parameter]
	public bool NoWrap { get; set; }
	[Parameter]
	public TextType TextType { get; set; } = TextType.P;

	protected override void OnStyling(ClassBuilder classBuilder)
	{
		base.OnStyling(classBuilder);

		classBuilder
			.WithTextNoWrap(NoWrap)
			.WithTextType(TextType);
	}
}
